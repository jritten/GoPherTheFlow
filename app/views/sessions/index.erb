<form class='login' method="post" action="/login">
  <div>
    <%= erb :'_errors', layout: false %>
  </div>
  <div>
  <label>Email: </label>
  <input type="email" name="user[email]">
  </div>
  <div>
  <label>Password: </label>
  <input type="password" name="user[password]">
  </div>
  <div>
  <input type="submit" name="login" value="Login">
  </div>
</form>
